<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background" >

    <com.example.assertmanager.view.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:id="@+id/check_zc_mx_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar"
        android:layout_marginTop="@dimen/zc_mx_margin"
        android:background="@drawable/green_border_no_side_bg" >

        <TableRow android:layout_margin="@dimen/zc_mx_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zc_bh"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/zc_bh_show"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_mx_margin"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/zc_mx_margin"
            android:layout_marginRight="@dimen/zc_mx_margin"
            android:background="@drawable/green_divider" >
        </TableRow>

        <TableRow android:layout_margin="@dimen/zc_mx_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zc_km"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/zc_km_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_mx_margin"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/zc_mx_margin"
            android:layout_marginRight="@dimen/zc_mx_margin"
            android:background="@drawable/green_divider" >
        </TableRow>

        <TableRow android:layout_margin="@dimen/zc_mx_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zc_mc"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/zc_mc_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_mx_margin"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/zc_mx_margin"
            android:layout_marginRight="@dimen/zc_mx_margin"
            android:background="@drawable/green_divider" >
        </TableRow>

        <TableRow android:layout_margin="@dimen/zc_mx_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zc_ggxh"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/zc_ggxh_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_mx_margin"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/zc_mx_margin"
            android:layout_marginRight="@dimen/zc_mx_margin"
            android:background="@drawable/green_divider" >
        </TableRow>

        <TableRow android:layout_margin="@dimen/zc_mx_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zc_mxxglbm"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/zc_glbm_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_mx_margin"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/zc_mx_margin"
            android:layout_marginRight="@dimen/zc_mx_margin"
            android:background="@drawable/green_divider" >
        </TableRow>

        <TableRow android:layout_margin="@dimen/zc_mx_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zc_sybm"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/zc_sybm_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/zc_mx_margin"
                android:textColor="@color/white" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/check_zc_confim_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_zc_mx_tl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button1_bg"
        android:minWidth="120dp"
        android:text="@string/str_confirm"
        android:textColor="@color/white" />

</RelativeLayout>