<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background" >

    <LinearLayout
        android:id="@+id/sybm_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/zc_mx_margin"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zc_sybm"
            android:textColor="@color/green_text_color"
            android:textSize="16sp" />

        <com.example.assertmanager.view.MutipleSpnnier
            android:id="@+id/sybm_sp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <Button
        android:id="@+id/start_check_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/sybm_ll"
        android:layout_alignRight="@id/sybm_ll"
        android:layout_below="@id/sybm_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button4_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/str_start_check" />

    <TextView
        android:id="@+id/check_history_show_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_check_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/zc_mx_margin"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>